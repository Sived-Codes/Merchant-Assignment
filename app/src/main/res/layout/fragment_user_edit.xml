<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".view.UserEditFragment">

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icn_back" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Detail"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />



    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionBar">

        <LinearLayout
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userImage"
                android:src="@drawable/icn_user"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp" />

            <EditText
                android:id="@+id/updateName"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Name"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/cl_edit_text_bg"/>

            <EditText
                android:id="@+id/updateEmail"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Email"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/cl_edit_text_bg"/>

            <EditText
                android:id="@+id/updateMobile"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Update Mobile"
                android:inputType="number"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/cl_edit_text_bg"/>

            <com.google.android.material.button.MaterialButton
                app:cornerRadius="@dimen/_11sdp"
                android:id="@+id/updateBtn"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:backgroundTint="@color/primary"
                android:layout_height="@dimen/_45sdp"
                android:text="update Detail"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>